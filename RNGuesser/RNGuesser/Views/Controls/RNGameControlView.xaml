<UserControl x:Class="RNGuesser.Views.Controls.RNGameControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RNGuesser.Views.Controls"
             xmlns:viewmodels="clr-namespace:RNGuesser.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:RNGameControlViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type viewmodels:RNGameMenuControlViewModel}">
            <local:RNGameMenuControlView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:RNGamePlayControlViewModel}">
            <local:RNGamePlayControlView />
        </DataTemplate>
    </UserControl.Resources>

    <UserControl Content="{Binding CurrentViewModel}" />
</UserControl>
