<UserControl x:Class="RNGuesser.Views.Controls.GuessSimulation.GuessSimulationMenuControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RNGuesser.Views.Controls.GuessSimulation"
             xmlns:viewmodels="clr-namespace:RNGuesser.ViewModels.GuessSimulation"
             d:DataContext="{d:DesignInstance Type=viewmodels:GuessSimulationMenuViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0"
                   Grid.Row="0"
                   Grid.ColumnSpan="2"
                   FontSize="30"
                   FontWeight="Bold"
                   Text="Guessing simulation"
                   Foreground="white"
                   HorizontalAlignment="Center"
                   Margin="10"/>

        <TextBlock Grid.Column="0"
                   Grid.Row="1"
                   Text="Low:"
                   FontSize="20"
                   Foreground="white"
                   Margin="50,10,20,10"/>
        <TextBox Grid.Column="1"
                 Grid.Row="1"
                 Text="{Binding Low, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="20"
                 HorizontalContentAlignment="Center"
                 Margin="0,10,100,10"/>

        <TextBlock Grid.Column="0"
                   Grid.Row="2"
                   Text="High:"
                   FontSize="20"
                   Foreground="white"
                   Margin="50,10,20,10"/>
        <TextBox Grid.Column="1"
                 Grid.Row="2"
                 Text="{Binding High, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="20"
                 HorizontalContentAlignment="Center"
                 Margin="0,10,100,10"/>

        <TextBlock Grid.Column="0"
                   Grid.Row="3"
                   Text="Attempts:"
                   FontSize="20"
                   Foreground="white"
                   Margin="50,10,20,10"/>
        <TextBox Grid.Column="1"
                 Grid.Row="3"
                 Text="{Binding Attempts, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="20"
                 HorizontalContentAlignment="Center"
                 Margin="0,10,100,10"/>

        <TextBlock Grid.Column="0"
                   Grid.Row="4"
                   Text="Amount:"
                   FontSize="20"
                   Foreground="white"
                   Margin="50,10,20,10"/>
        <TextBox Grid.Column="1"
                 Grid.Row="4"
                 Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="20"
                 HorizontalContentAlignment="Center"
                 Margin="0,10,100,10"/>

        <Button Grid.Column="0"
                Grid.Row="5"
                Grid.ColumnSpan="2"
                Content="{Binding ButtonStatus}"
                FontSize="25"
                Command="{Binding StartSimulationCommandAsync}"
                Margin="200,30,200,30"/>
    </Grid>
</UserControl>
